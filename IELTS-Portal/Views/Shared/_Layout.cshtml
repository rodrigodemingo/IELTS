<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/res-calendar")

    <!-- HTML5 shim and Respond.js for IE8 support of HTML5 elements and media queries -->
    <!--[if lt IE 9]>
      <script src="https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js"></script>
      <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->
  

</head>
<body>
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-2">
                <img class="img-responsive" src="~/Content/images/ielts.jpg" />
            </div>
            <div class="col-md-10">
                <img class="img-responsive center-block" src="~/Content/images/cert-small.jpg" />
            </div>
        </div>
        <div class="row navigation">
            <div class="col-md-3"></div>
            <!-- Top Navigation Bar Start Here -->
            <div class="col-md-6">
                <ul class="nav nav-pills">
                    <li role="presentation" class="active">
                        <a href='@Url.Action("Index", "Home", null, Request.Url.Scheme)'>Home</a>
                    </li>
                    <li role="presentation">
                        <a href='@Url.Action("BookYourTest", "Home", null, Request.Url.Scheme)'>Book your test</a>
                    </li>
                    <li role="presentation">
                        <a href='@Url.Action("CandidateArea", "Home", null, Request.Url.Scheme)'>Candidate area</a>
                    </li>
                    <li role="presentation">
                        <a href='@Url.Action("AboutUs", "Home", null, Request.Url.Scheme)'>About us</a>
                    </li>
                    <li role="presentation">
                        <a href='@Url.Action("Contact", "Home", null, Request.Url.Scheme)'>Contact us</a>
                    </li>
                    <li class="navbar-form navbar-right">
                        <input type="text" class="form-control" placeholder="Search..." />
                    </li>
                </ul>
            </div>
            <div class="col-md-3"></div>
            <!-- Top Navigation Bar End Here -->
        </div>
                <!-- Top Content Page Start Here -->
        <div class="row">
            <!-- Top Left Panel Start Here -->
            <div class="col-md-2">
                <br />
                <div class="panel panel-danger">
                    <div class="panel-heading">
                        <h3 class="panel-title text-center">
                            Book your test
                        </h3>
                    </div>
                    <div class="panel-body">
                        <div class="btn-group" style="display: flex;">
                            <button type="button" class="btn btn-default" style="flex: 1 0 auto; order: 1; width: auto; min-width: 0;">Button</button>
                            <button type="button" class="btn btn-default dropdown-toggle" style="flex: 0 1 auto; order: 2; width: auto; min-width: 0;" data-toggle="dropdown" aria-expanded="false">
                                <span class="caret"></span>
                            </button>
                            <ul class="dropdown-menu" role="menu">
                                <li><a href="#">Item 1</a></li>
                                <li><a href="#">Item 2</a></li>
                                <li><a href="#">Item 3</a></li>
                            </ul>
                        </div>
                        <div class="btn-group" style="display: flex;">
                            <button type="button" class="btn btn-default" style="flex: 1 0 auto; order: 1; width: auto; min-width: 0;">Button</button>
                            <button type="button" class="btn btn-default dropdown-toggle" style="flex: 0 1 auto; order: 2; width: auto; min-width: 0;" data-toggle="dropdown" aria-expanded="false">
                                <span class="caret"></span>
                            </button>
                            <ul class="dropdown-menu" role="menu">
                                <li><a href="#">Item 1</a></li>
                                <li><a href="#">Item 2</a></li>
                                <li><a href="#">Item 3</a></li>
                            </ul>
                        </div>
                        <div class="btn-group" style="display: flex;">
                            <button type="button" class="btn btn-default" style="flex: 1 0 auto; order: 1; width: auto; min-width: 0;">Button</button>
                            <button type="button" class="btn btn-default dropdown-toggle" style="flex: 0 1 auto; order: 2; width: auto; min-width: 0;" data-toggle="dropdown" aria-expanded="false">
                                <span class="caret"></span>
                            </button>
                            <ul class="dropdown-menu" role="menu">
                                <li><a href="#">Item 1</a></li>
                                <li><a href="#">Item 2</a></li>
                                <li><a href="#">Item 3</a></li>
                            </ul>
                        </div>
                        <div class="btn-group" style="display: flex;">
                            <button type="button" class="btn btn-default" style="flex: 1 0 auto; order: 1; width: auto; min-width: 0;">Button</button>
                            <button type="button" class="btn btn-default dropdown-toggle" style="flex: 0 1 auto; order: 2; width: auto; min-width: 0;" data-toggle="dropdown" aria-expanded="false">
                                <span class="caret"></span>
                            </button>
                            <ul class="dropdown-menu" role="menu">
                                <li><a href="#">Item 1</a></li>
                                <li><a href="#">Item 2</a></li>
                                <li><a href="#">Item 3</a></li>
                            </ul>
                        </div>
                    </div>
                    <div class="panel-footer">
                        <a href='@Url.Action("NewApplication", "RegisterTest", null, Request.Url.Scheme)' class="btn btn-danger btn-block">Book now!</a>

                    </div>
                </div>
                <div class="panel panel-primary">
                    <div class="panel-heading">
                        <h3 class="panel-title text-center">
                            Test Days
                        </h3>
                    </div>
                    <div class="panel-body">
                        <div>
                            <!-- Responsive calendar - START -->
                            <div class="responsive-calendar">
                                <div class="controls">
                                    <a class="pull-left" data-go="prev">
                                        <div class="btn btn-primary"><<</div>
                                    </a>
                                    <h4><span data-head-year></span> <span data-head-month></span></h4>
                                    <a class="pull-right" data-go="next">
                                        <div class="btn btn-primary">>></div>
                                    </a>
                                </div>
                                <hr />
                                <div class="day-headers">
                                    <div class="day header">Mo</div>
                                    <div class="day header">Tu</div>
                                    <div class="day header">We</div>
                                    <div class="day header">Th</div>
                                    <div class="day header">Fr</div>
                                    <div class="day header">Sa</div>
                                    <div class="day header">Su</div>
                                </div>
                                <div class="days" data-group="days">
                                </div>
                            </div>
                            <!-- Responsive calendar - END -->
                        </div>
                    </div>
                </div>

            </div>
            <!-- Top Left Panel End Here -->
            <!-- Top Content Area Start Here -->
            <div class="col-md-10">
                @RenderBody()
            </div>
            <!-- Top Content Area End Here -->
        </div>
        <!-- Top Content Page End Here -->
    </div>
            <script type="text/javascript">
                $(document).ready(function () {
                    $(".responsive-calendar").responsiveCalendar({
                        time: '2015-08',
                        events: {
                            "2015-08-30": {
